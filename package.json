{
  "name": "rate-limiter-core",
  "version": "0.2.0-beta",
  "description": "Comprehensive, well-documented rate limiting algorithms with interactive learning tools",
  "main": "src/index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/ examples/",
    "lint:fix": "eslint src/ tests/ examples/ --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:snyk": "snyk test",
    "security:fix": "npm audit fix",
    "security": "npm run security:audit && npm run lint",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "example:token-bucket": "node examples/javascript/token-bucket-example.js",
    "example:config": "node examples/javascript/config-based-example.js",
    "example:express": "node examples/express/server.js"
  },
  "keywords": [
    "rate-limiting",
    "rate-limiter",
    "throttle",
    "api",
    "token-bucket",
    "leaky-bucket",
    "sliding-window"
  ],
  "author": "Rate Limiter Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Maneesh-Relanto/Rate-Limiter-algorithm.git"
  },
  "bugs": {
    "url": "https://github.com/Maneesh-Relanto/Rate-Limiter-algorithm/issues"
  },
  "homepage": "https://github.com/Maneesh-Relanto/Rate-Limiter-algorithm#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "src/",
    "index.d.ts",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "eslint": "^8.56.0",
    "eslint-plugin-security": "^3.0.1",
    "express": "^5.2.1",
    "ioredis-mock": "^8.13.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 92,
        "lines": 92,
        "statements": 92
      }
    }
  }
}
